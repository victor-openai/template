{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2019",
    "jsx": "react-jsx",
    "skipLibCheck": true,
  "strict": false,
  "isolatedDeclarations": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
